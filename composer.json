{
  "name": "peaga001/php-basic-setup",
  "version": "1.0.0",
  "description": "Php Basic Setup",
  "type": "library",
  "autoload": {
    "classmap": [
      "src/"
    ],
    "psr-4": {
      "App\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Pedro Barros"
    }
  ],
  "scripts": {
    "test": "phpunit tests",
    "stan": "phpstan analyse src/ --level=10",
    "check-all": "phpstan analyse src/ --level=10 && phpunit tests",
    "coverage": "XDEBUG_MODE=coverage php vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "optimize-autoloader": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require-dev": {
    "phpunit/phpunit": "^12.4",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.24",
    "squizlabs/php_codesniffer": "^4.0",
    "phpstan/phpstan": "^2.1"
  },
  "require": {
    "symfony/var-dumper": "^7.3",
    "guzzlehttp/guzzle": "^7.10"
  }
}
